@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>用户添加/编辑</title>
</head>
<body>
    <!-- Modal -->
    <div>
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h3 id="myModalLabel">用户属性编辑</h3>
        </div>
        <div class="modal-body">
            <div>
                <p>
                    <span class="a_tit">用户名称:</span>
                    <span><input type="text" id="txtUserName" style="width:340px;" /></span>
                </p>
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn btn-primary" onclick="userlist.saveUser();">保存</button>
            <button class="btn" data-dismiss="modal" aria-hidden="true">取消</button>
        </div>
    </div>
    <script type="text/javascript">
        $(function () {
            userlist.initEditForm();

            userlist.loadUser();
        })
    </script>
</body>
</html>