@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>角色添加/编辑</title>
</head>
<body>
    <!-- Modal -->
    <div>
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h3 id="myModalLabel">用户列表</h3>
        </div>
        <div class="modal-body">
            <div id="myuserlistdialoggrid" class="grid-container" style="width:100%;height:280px;float:left;"></div>
        </div>
        <div class="modal-footer">
            <button class="btn btn-primary" onclick="userlistdialog.sure();">确定</button>
            <button class="btn" data-dismiss="modal" aria-hidden="true" onclick="userlistdialog.cancel();">取消</button>
        </div>
    </div>


    <script type="text/javascript">
        $(function () {
            userlistdialog.initListForm();

            userlistdialog.getUserList();
        })
    </script>
</body>
</html>