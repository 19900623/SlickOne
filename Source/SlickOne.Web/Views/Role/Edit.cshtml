@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>角色添加/编辑</title>
</head>
<body>
    <!-- Modal -->
    <div>
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h3 id="myModalLabel">角色属性编辑</h3>
        </div>
        <div class="modal-body">
            <div>
                <p>
                    <span class="a_tit">角色名称:</span>
                    <span><input type="text" id="txtRoleName" style="width:340px;" /></span>
                </p>
                <p>
                    <span class="a_tit">角色编码:</span>
                    <span><input type="text" id="txtRoleCode" style="width:340px;" value="1" /></span>
                </p>
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn btn-primary" onclick="rolelist.saveRole();">保存</button>
            <button class="btn" data-dismiss="modal" aria-hidden="true">取消</button>
        </div>
    </div>
    <script type="text/javascript">
        $(function () {
            rolelist.initEditForm();

            rolelist.loadRole();
        })
    </script>
</body>
</html>